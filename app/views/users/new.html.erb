<div id="users_new">
  <h1>Sign up a new user</h1>
  <% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path, :html => { :class => 'simple' } do |form| -%>
    <%= render :partial => 'form', :object => form %>
  <p><%= form.submit 'Sign up' %> or <%= link_to 'Cancel', users_path %></p>
  <% end -%>
</div>